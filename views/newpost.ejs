<%- layout('./layouts/layout') %>

<h2 class="page-header">Add new post</h2>

<form method="post" action="/posts/newpost">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" placeholder="Title" name="posttitle">
    </div>
    <div class="form-group">
        <label>Post content</label>
        <textarea type="text" class="form-control" placeholder="Post content" name="postcontent"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Add</button>
</form>
